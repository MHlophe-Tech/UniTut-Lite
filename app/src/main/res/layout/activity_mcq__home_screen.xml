<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MCQ_HomeScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mhlophetech.unitut.lite.MCQ.HomeScreen">

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:text="Multiple Choice Questions"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnDemo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="demo" />

            <Button
                android:id="@+id/btnMaths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maths" />

            <Button
                android:id="@+id/btnPhysics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Physics" />

            <Button
                android:id="@+id/btnMathsLit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maths Literacy" />

            <Button
                android:id="@+id/btnGeography"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Geography" />




        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>